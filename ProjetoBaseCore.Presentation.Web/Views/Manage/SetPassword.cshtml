@model SetPasswordViewModel
@{
    ViewData["Title"] = "Adicionar Senha";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<body class="body-registro">
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <h4>
        Você está logado com uma conta externa. Caso queira adicionar uma conta local,
        crie uma senha abaixo.
    </h4>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Adicionar senha</button>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@model ProjetoBaseCore.Application.ViewModels.PessoaViewModel

@{
    ViewData["Title"] = "Index";
}
<body class="body-cadastro">
    <h2>Seus Dados</h2>
    <h4>Mantenha seus dados sempre atualizados</h4>
    <br />
    <div class="row">
        <div class="col-md-12">
            <form id="frmCreate">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EnderecoId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Cpf" class="control-label"></label>
                            <input asp-for="Cpf" class="form-control mask-cpf" />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="DataNascimento" class="control-label"></label>
                            <div class="input-group date">
                                <input asp-for="DataNascimento" type="text" id="DataNascimento" class="form-control">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control mask-phone" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                @Html.Partial("_Endereco")
                <br />
                <div class="form-group">
                    <input id="btnSave" type="button" value="Salvar" class="btn btn-default btn-action btn-pessoa" />
                </div>
            </form>
        </div>

    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")

    }
</body>
<script>
    $('.input-group.date').datepicker({
        language: "pt-BR",
        orientation: "bottom auto",
        autoclose: true
    });
</script>
<script src="~/js/pessoa/pessoa.js"></script>
